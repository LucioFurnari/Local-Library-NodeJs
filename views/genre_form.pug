extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      div(class='form-floating mb-3')
        input#name.form-control( type='text', placeholder='Fantasy, Poetry etc.', name='name', value=(undefined===genre ? '' : genre.name), required='true')
        label(class='fs-5' for='name') Genre: 
      button(class='btn btn-primary btn-lg' type='submit') Submit

    if errors
      ul 
        for error in errors
          li!= error.msg