extends layout

block content 
  h1=title

  form(method='POST' action='')
    div.form-group
      div(class='form-floating mb-3')
        input#first_name.form-control(type='text' placeholder='First name' name='first_name'
          required='true' value=(undefined===author ? '' : author.first_name) )
        label(class='fs-5' for='first_name') First Name
      div(class='form-floating mb-3')
        input#family_name.form-control(type='text' placeholder='Family name' name='family_name'
          required='true' value=(undefined===author ? '' : author.family_name))
        label(class='fs-5' for='family_name') Family Name
    div.form-group
      div(class='form-floating mb-3')
        input#date_of_birth.form-control(type='date' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth) )
        label(for='date_of_birth') Date of birth
      div(class='form-floating mb-3')
        input#date_of_death.form-control(type='date' name='date_of_death' value=(undefined===author ? '' : author.date_of_death))
        label(for='date_of_death') Date of death
      button(class='btn btn-primary btn-lg' type='submit') Submit

      if errors 
        ul 
          for error in errors
            li!=error.msg