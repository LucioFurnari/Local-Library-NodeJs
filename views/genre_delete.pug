extends layout 

block content

  h1=title

  if genres_books.length
    p #[strong Delete the following books before attempting to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Books

      dl
      each book in genres_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else 
    p Dou you really want to delete this Genre?
    p #{genre.name}

    form(method='POST' action='')
    div.form-group
      input#genreid.form-control(type='hidden' name='genreid' required='true' value=genre._id)
    button.btn.btn-primary(type='submit') Delete